{% extends 'base.html.twig' %}

{% block title %}{{ 'about.meta_title'|trans }}{% endblock %}

{% block body %}
<div class="py-5">
    <!-- Main Section -->
    <section class="mb-5">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <h1 class="display-4 mb-3">{{ 'about.title'|trans }}</h1>
                <p class="lead text-muted">{{ 'about.subtitle'|trans }}</p>
            </div>
        </div>
    </section>

    <!-- Qui suis-je ? -->
    <section class="mb-5">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h2 class="h3 mb-4">{{ 'about.who_title'|trans }}</h2>
                <p class="text-muted mb-3">
                    {{ 'about.who_p1'|trans }}
                </p>
                <p class="text-muted">
                    {{ 'about.who_p2'|trans }}
                </p>
            </div>
        </div>
    </section>

    <!-- Galerie Photo -->
    <section class="mb-5">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h2 class="h3 mb-4">{{ 'about.gallery_title'|trans }}</h2>
                <div class="row g-4">
                    <!-- Sports -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <img src="{{ asset('images/sports.jpg') }}" class="card-img-top" alt="Sports" style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Sports</h5>
                                <p class="card-text text-muted">{{ 'about.card_sports_text'|trans }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Informatique -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <img src="{{ asset('images/informatique.jpg') }}" class="card-img-top" alt="{{ 'about.card_it_alt'|trans }}" style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ 'about.card_it_title'|trans }}</h5>
                                <p class="card-text text-muted">{{ 'about.card_it_text'|trans }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Culture -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <img src="{{ asset('images/culture.jpg') }}" class="card-img-top" alt="{{ 'about.card_culture_alt'|trans }}" style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ 'about.card_culture_title'|trans }}</h5>
                                <p class="card-text text-muted">{{ 'about.card_culture_text'|trans }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Projets -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <img src="{{ asset('images/projets.jpg') }}" class="card-img-top" alt="{{ 'about.card_projects_alt'|trans }}" style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ 'about.card_projects_title'|trans }}</h5>
                                <p class="card-text text-muted">{{ 'about.card_projects_text'|trans }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Réseaux -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <img src="{{ asset('images/reseaux.jpg') }}" class="card-img-top" alt="{{ 'about.card_networks_alt'|trans }}" style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ 'about.card_networks_title'|trans }}</h5>
                                <p class="card-text text-muted">{{ 'about.card_networks_text'|trans }}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Lecture -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <img src="{{ asset('images/lecture.jpg') }}" class="card-img-top" alt="{{ 'about.card_reading_alt'|trans }}" style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ 'about.card_reading_title'|trans }}</h5>
                                <p class="card-text text-muted">{{ 'about.card_reading_text'|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Qualités personnelles -->
    <section>
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h2 class="h3 mb-4">{{ 'about.traits_title'|trans }}</h2>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex mb-3">
                            <i class="bi bi-star-fill text-primary me-2" style="font-size: 1.25rem;"></i>
                            <div>
                                <h5 class="mb-1">{{ 'about.trait_curiosity_title'|trans }}</h5>
                                <p class="text-muted small">{{ 'about.trait_curiosity_text'|trans }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex mb-3">
                            <i class="bi bi-star-fill text-primary me-2" style="font-size: 1.25rem;"></i>
                            <div>
                                <h5 class="mb-1">{{ 'about.trait_autonomy_title'|trans }}</h5>
                                <p class="text-muted small">{{ 'about.trait_autonomy_text'|trans }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex mb-3">
                            <i class="bi bi-star-fill text-primary me-2" style="font-size: 1.25rem;"></i>
                            <div>
                                <h5 class="mb-1">{{ 'about.trait_team_title'|trans }}</h5>
                                <p class="text-muted small">{{ 'about.trait_team_text'|trans }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex mb-3">
                            <i class="bi bi-star-fill text-primary me-2" style="font-size: 1.25rem;"></i>
                            <div>
                                <h5 class="mb-1">{{ 'about.trait_commitment_title'|trans }}</h5>
                                <p class="text-muted small">{{ 'about.trait_commitment_text'|trans }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
