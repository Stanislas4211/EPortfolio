{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Style personnalisé qui reprend le thème */
        body {
            background: linear-gradient(135deg, rgb(30, 181, 207) 0%, rgb(6, 41, 61) 100%);
            min-height: 100vh;
            padding: 0;
        }

        .container-custom {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        /* Section Hero */
        .hero-section {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 3rem;
            margin-bottom: 3rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            animation: fadeInUp 0.6s ease-out;
            text-align: center;
        }

        .hero-section h1 {
            font-size: 3rem;
            background: linear-gradient(135deg, rgb(97, 93, 93) 0%, rgb(0, 0, 0) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .hero-section p {
            font-size: 1.2rem;
            color: #555;
        }

        /* Section Contact */
        .contact-section {
            animation: fadeInUp 0.8s ease-out;
        }

        .contact-category {
            margin-bottom: 3rem;
        }

        .contact-category h2 {
            color: white;
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin-bottom: 2rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.8rem;
        }


        /* Grille de contact */
        .contact-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        /* Cartes de contact */
        .contact-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }

        .contact-card-single {
            max-width: 600px;
            margin: 0 auto;
        }

        .contact-card-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e0e0e0;
        }

        .contact-card-header h3 {
            color: #333;
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
        }

        .contact-card-body {
            text-align: center;
        }

        .contact-value {
            color: #667eea;
            font-size: 1.1rem;
            font-weight: 500;
            margin-bottom: 1.5rem;
            word-break: break-word;
        }

        .contact-value-large {
            font-size: 1.8rem;
            font-weight: 600;
        }

        .contact-btn {
            display: inline-block;
            background: linear-gradient(135deg, rgb(97, 93, 93) 0%, rgb(0, 0, 0) 100%);
            color: white;
            padding: 0.8rem 2rem;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .contact-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            color: white;
        }

        /* Réseaux sociaux */
        .social-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
        }

        .social-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 2rem;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .social-icon {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .social-card.github .social-icon {
            background: linear-gradient(135deg, #333 0%, #000 100%);
            color: white;
        }

        .social-card.instagram .social-icon {
            background: linear-gradient(135deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
            color: white;
        }

        .social-card.twitter .social-icon {
            background: linear-gradient(135deg, #000 0%, #333 100%);
            color: white;
        }

        .social-card.linkedin .social-icon {
            background: linear-gradient(135deg, #0077b5 0%, #005582 100%);
            color: white;
        }

        .social-card h3 {
            color: #333;
            font-size: 1.3rem;
            font-weight: 600;
            margin: 0;
        }

        .social-card p {
            color: #666;
            margin: 0;
            font-size: 0.95rem;
        }

        /* Formulaire de contact */
        .contact-form-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 3rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            text-align: center;
            max-width: 600px;
            margin: 0 auto;
        }

        .form-intro {
            color: #555;
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        .contact-btn-large {
            display: inline-block;
            background: linear-gradient(135deg, rgb(97, 93, 93) 0%, rgb(0, 0, 0) 100%);
            color: white;
            padding: 1.2rem 3rem;
            border-radius: 40px;
            text-decoration: none;
            font-weight: 700;
            font-size: 1.3rem;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
        }

        .contact-btn-large:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
            color: white;
        }

        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container-custom {
                padding: 1rem;
            }

            .hero-section,
            .contact-card,
            .contact-form-card {
                padding: 2rem 1.5rem;
            }

            .hero-section h1 {
                font-size: 2rem;
            }

            .contact-category h2 {
                font-size: 1.5rem;
            }

            .contact-grid,
            .social-grid {
                grid-template-columns: 1fr;
            }

            .contact-value-large {
                font-size: 1.4rem;
            }

            .contact-btn-large {
                padding: 1rem 2rem;
                font-size: 1.1rem;
            }
        }
    </style>
{% endblock %}