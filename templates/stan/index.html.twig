{% extends 'base.html.twig' %}

{% block title %}EPortfolio Favier Stanislas{% endblock %}

{% block body %}
<div class="container my-5">
    <!-- Section informations personnelles -->
    <div class="card shadow-sm mb-5">
        <div class="card-body text-center py-5">
            <h1 class="display-3 mb-4">Favier Stanislas</h1>

            <p class="lead mb-4">{{ 'home.title'|trans }}</p>
            
            <div class="row justify-content-center mt-4">
                <div class="col-md-8">
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        <span class="badge bg-secondary fs-6">
                            stanislas.favier@etu.univ-st-stienne.fr
                        </span>
                        <span class="badge bg-secondary fs-6">
                            06 44 88 80 27
                        </span>
                        <span class="badge bg-secondary fs-6">
                            Roanne (42300), France
                        </span>
                    </div>
                </div>
            </div>
            
            <hr class="my-4">
            
            <p class="fs-5 text-muted">
                {{ 'home.intro'|trans }}
            </p>
        </div>
    </div>

    <!-- Container "Pour en savoir plus" -->
    <div class="card border-primary shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">{{ 'home.more_title'|trans }}</h3>
        </div>
        <div class="card-body">
            <p class="card-text mb-4">
                {{ 'home.more_text'|trans }}
            </p>
            
            <div class="row g-3">
                <div class="col-md-4">
                    <a href="{{ path('app_moi') }}" class="btn btn-outline-primary w-100 py-3">
                        <strong>{{ 'home.btn_about_title'|trans }}</strong><br>
                        <small>{{ 'home.btn_about_sub'|trans }}</small>
                    </a>
                </div>
                
                <div class="col-md-4">
                    <a href="{{ path('app_cv') }}" class="btn btn-outline-primary w-100 py-3">
                        <strong>{{ 'home.btn_cv_title'|trans }}</strong><br>
                        <small>{{ 'home.btn_cv_sub'|trans }}</small>
                    </a>
                </div>
                
                <div class="col-md-4">
                    <a href="{{ path('app_contacte') }}" class="btn btn-outline-primary w-100 py-3">
                        <strong>{{ 'home.btn_contact_title'|trans }}</strong><br>
                        <small>{{ 'home.btn_contact_sub'|trans }}</small>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}