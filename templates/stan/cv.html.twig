{% extends 'base.html.twig' %}

{% block title %}{{ 'cv.meta_title'|trans }}{% endblock %}

{% block body %}
<div class="py-5">
    <!-- Main Section -->
    <section class="mb-5">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <h1 class="display-4 mb-3">{{ 'cv.title'|trans }}</h1>
                <p class="lead text-muted">{{ 'cv.subtitle'|trans }}</p>
            </div>
        </div>
    </section>

    <!-- CV Container -->
    <section>
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <!-- En-tête CV -->
                <div class="text-center pb-4 mb-4 border-bottom">
                    <h2 class="h2 mb-2">Favier Stanislas</h2>
                    <p class="lead text-primary mb-3">{{ 'cv.header_role'|trans }}</p>
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <div class="d-flex flex-wrap justify-content-center gap-3 fs-6">
                                <span class="badge bg-secondary">stan.fav42110@gmail.com</span>
                                <span class="badge bg-secondary">stanislas.favier@etu.univ-st-etienne.fr</span>
                                <span class="badge bg-secondary">06 44 88 80 27</span>
                                <span class="badge bg-secondary">Roanne (42300), France</span>
                                <span class="badge bg-secondary">{{ 'cv.license'|trans }}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Profil -->
                <div class="mb-5">
                    <h3 class="h4 mb-3">{{ 'cv.profile_title'|trans }}</h3>
                    <p class="text-muted">{{ 'cv.profile_text'|trans }}</p>
                </div>

                <!-- Formation -->
                <div class="mb-5">
                    <h3 class="h4 mb-4">{{ 'cv.education_title'|trans }}</h3>
                    
                    <div class="mb-4 ps-3 border-start border-primary border-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h4 class="h5 mb-0">{{ 'cv.education_but'|trans }}</h4>
                            <span class="badge bg-info">2025-2026</span>
                        </div>
                        <p class="text-muted mb-0">{{ 'cv.education_but_place'|trans }}</p>
                    </div>

                    <div class="mb-4 ps-3 border-start border-primary border-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h4 class="h5 mb-0">{{ 'cv.education_bac'|trans }}</h4>
                            <span class="badge bg-info">2025</span>
                        </div>
                    </div>

                    <div class="mb-4 ps-3 border-start border-primary border-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h4 class="h5 mb-0">{{ 'cv.education_brevet'|trans }}</h4>
                            <span class="badge bg-info">2021</span>
                        </div>
                    </div>

                    <div class="ps-3 border-start border-primary border-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h4 class="h5 mb-0">{{ 'cv.education_bia'|trans }}</h4>
                            <span class="badge bg-info">2020</span>
                        </div>
                    </div>
                </div>

                <!-- Expériences Professionnelles -->
                <div class="mb-5">
                    <h3 class="h4 mb-4">{{ 'cv.exp_title'|trans }}</h3>
                    
                    <div class="ps-3 border-start border-primary border-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h4 class="h5 mb-0">{{ 'cv.exp_archi_title'|trans }}</h4>
                            <span class="badge bg-info">06/2022</span>
                        </div>
                        <p class="text-muted mb-3">Atelier Ampère</p>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-primary"></i>
                                {{ 'cv.exp_archi_item1'|trans }}
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle-fill text-primary"></i>
                                {{ 'cv.exp_archi_item2'|trans }}
                            </li>
                            <li>
                                <i class="bi bi-check-circle-fill text-primary"></i>
                                {{ 'cv.exp_archi_item3'|trans }}
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Compétences -->
                <div class="mb-5">
                    <h3 class="h4 mb-4">{{ 'cv.skills_title'|trans }}</h3>
                    <p class="text-muted mb-4">{{ 'cv.skills_intro'|trans }}</p>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-primary"></i>
                            {{ 'cv.skill_vm'|trans }}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-primary"></i>
                            {{ 'cv.skill_algo'|trans }}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-primary"></i>
                            {{ 'cv.skill_elec'|trans }}
                        </li>
                        <li>
                            <i class="bi bi-check-circle-fill text-primary"></i>
                            {{ 'cv.skill_switch'|trans }}
                        </li>
                    </ul>
                    <p class="text-muted mb-4">{{ 'cv.skills_plus'|trans }}</p>
                </div>

                <!-- Bouton Téléchargement -->
                <div class="text-center pt-4 border-top">
                    <a href="{{ path('cv_register') }}" class="btn btn-primary btn-lg">
                        <i class="bi bi-download"></i> {{ 'cv.download_btn'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
