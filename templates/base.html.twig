<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Permet au mode sombre de s'activer directement lors du changement de page. -->
        <script>
            // Appliquer le thème IMMÉDIATEMENT au chargement
            (function() {
                try {
                    const theme = localStorage.getItem('theme') || 'light';
                    if (theme === 'dark') {
                        document.documentElement.classList.add('dark-mode');
                    }
                } catch (e) {}
            })();
        </script>


        <title>{% block title %}EPortfolio Favier Stanislas{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22></svg>">
        
        <!-- Bootswatch Journal Theme -->
        <link rel="stylesheet" href="https://bootswatch.com/5/journal/bootstrap.min.css">

        <!-- Bootstrap Icons -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        
        {% block stylesheets %}
        <style>
                body {
                    display: flex;
                    flex-direction: column;
                    min-height: 100vh;
                    background-color: #dae2eeff;
                }

                .container {
                    flex: 1;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_stan') }}">Favier Stanislas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_stan') }}" aria-current="page">Maison</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_cv') }}">Mon CV</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_contacte') }}">Me contacter</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><font dir="auto" style="vertical-align: inherit;"><font dir="auto" style="vertical-align: inherit;">Compétences</font></font></a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('app_administrer') }}">Administrer</a>
                                <a class="dropdown-item" href="{{ path('app_connecter') }}">Connecter</a>
                                <a class="dropdown-item" href="{{ path('app_programmer') }}">Programmer</a>
                            </div>
                        </li>
                    </ul>

                    <!-- Bouton Langue (thème Bootswatch) -->
                    <div class="nav-item dropdown ms-3">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-globe me-2"></i>
                            <span id="currentLanguage">
                                {% if app.request.locale == 'en' %}
                                    English
                                {% else %}
                                    Français
                                {% endif %}
                            </span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                            <li>
                                <a class="dropdown-item language-option {% if app.request.locale == 'fr' %}active{% endif %}" href="#" data-lang="fr">
                                    <i class="bi bi-flag-fill me-2"></i> Français
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item language-option {% if app.request.locale == 'en' %}active{% endif %}" href="#" data-lang="en">
                                    <i class="bi bi-flag-fill me-2"></i> English
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Bouton Mode jour/nuit -->
                    <button class="btn btn-outline-secondary" id="themeToggle" style="border: none; background: transparent;">
                        <i class="bi bi-moon-fill" id="themeIcon" style="font-size: 1.25rem;"></i>
                    </button>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        <!-- Footer -->
        {{ include('footer.html.twig') }}

        <!-- Bootstrap JS Bundle -->
        {% block javascript %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>