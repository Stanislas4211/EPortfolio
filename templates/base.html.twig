<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <script>
            (function() {
                try {
                    const theme = localStorage.getItem('theme') || 'light';
                    if (theme === 'dark') {
                        document.documentElement.classList.add('dark-mode');
                    }
                } catch (e) {}
            })();
        </script>

        <title>{% block title %}EPortfolio Favier Stanislas{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22></svg>">
        
        <link rel="stylesheet" href="https://bootswatch.com/5/journal/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        
        {% block stylesheets %}
            <style>
                body {
                    display: flex;
                    flex-direction: column;
                    min-height: 100vh;
                    background-color: #dae2eeff;
                }
                .container {
                    flex: 1;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_stan') }}">
                    Favier Stanislas
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarColor01" aria-controls="navbarColor01"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path('app_stan') }}" aria-current="page">
                                {{ 'nav.home'|trans }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_cv') }}">
                                {{ 'nav.cv'|trans }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_contacte') }}">
                                {{ 'nav.contact'|trans }}
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#"
                               role="button" aria-haspopup="true" aria-expanded="false">
                                {{ 'nav.skills'|trans }}
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('app_administrer') }}">
                                    {{ 'nav.skill_admin'|trans }}
                                </a>
                                <a class="dropdown-item" href="{{ path('app_connecter') }}">
                                    {{ 'nav.skill_connect'|trans }}
                                </a>
                                <a class="dropdown-item" href="{{ path('app_programmer') }}">
                                    {{ 'nav.skill_program'|trans }}
                                </a>
                            </div>
                        </li>
                    </ul>

                    {# Switcher de langue #}
                    {% set currentLocale = app.request.locale %}
                    {% set route = app.request.get('_route') %}
                    {% set params = app.request.get('_route_params') %}

                    <div class="nav-item dropdown ms-3">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="languageDropdown"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-globe me-2"></i>
                            <span id="currentLanguage">
                                {% if currentLocale == 'en' %}
                                    {{ 'nav.language_en'|trans }}
                                {% else %}
                                    {{ 'nav.language_fr'|trans }}
                                {% endif %}
                            </span>
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                            <li>
                                <a class="dropdown-item {% if currentLocale == 'fr' %}active{% endif %}"
                                   href="{{ path(route, params|merge({'_locale': 'fr'})) }}">
                                    <i class="bi bi-flag-fill me-2"></i> {{ 'nav.language_fr'|trans }}
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item {% if currentLocale == 'en' %}active{% endif %}"
                                   href="{{ path(route, params|merge({'_locale': 'en'})) }}">
                                    <i class="bi bi-flag-fill me-2"></i> {{ 'nav.language_en'|trans }}
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- Bouton Mode jour/nuit -->
                    <button class="btn btn-outline-secondary" id="themeToggle"
                            style="border: none; background: transparent;">
                        <i class="bi bi-moon-fill" id="themeIcon" style="font-size: 1.25rem;"></i>
                    </button>
                </div>
            </div>
        </nav>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {{ include('footer.html.twig') }}

        {% block javascript %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
                    crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
